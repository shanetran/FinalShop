<% if @products.size > 0 %>
<div class="row">

	<div class="col-md-3">
		<p class="lead">
			Category
		</p>
		<div class="list-group">
			<a href="#" class="list-group-item">Moto Bike</a>
			<a href="#" class="list-group-item">Cars</a>
			<a href="#" class="list-group-item">Supper Cars</a>
		</div>
	</div>

	<div class="col-md-9">
		<div class="row carousel-holder">
			<div class="col-md-12">
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
						<li data-target="#carousel-example-generic" data-slide-to="1"></li>
						<li data-target="#carousel-example-generic" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="item active">
							<img class="slide-image" src="http://placehold.it/800x300" alt="">
						</div>
						<div class="item">
							<img class="slide-image" src="http://placehold.it/800x300" alt="">
						</div>
						<div class="item">
							<img class="slide-image" src="http://placehold.it/800x300" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">

			<% @products.each do |product| %>
			<div class="col-sm-4 col-lg-4 col-md-4">
				<div class="thumbnail">
					<%= image_tag(product.image.url, size:"320x150") %>
					<div class="caption">
						<h5 class="pull-right">$<%= product.price %></h5>
						<h5><%= link_to product.name, "#" %></h5>
						<p>
							<%= truncate(product.description, :length => 100, :separator => ' ')%>
						</p>
					</div>
					<div class="ratings">
						<p class="pull-right">
							15 reviews
						</p>
						<p>
							<input value="4" type="number" class="rating" readonly="true">
						</p>
					</div>
					<div style="padding: 9px;">
						<p class="pull-right">
							<%= link_to "Buy Now", "#", class: "btn btn-primary" %>
						</p>
						<p>
							<%= link_to "View Detail", "#", class: "btn btn-primary" %>
						</p>
					</div>
				</div>
			</div>
			<% end %>
			<script type="text/javascript">
				$(".rating").rating({
					size : "xs",
					showClear : false,
					showCaption : false
				});
			</script>
			<style type="text/css">
				.rating-xs {
					font-size: 1em;
				}
			</style>
		</div>
	</div>
</div>
<% else %>
<p>
	Data Not found
</p>
<% end %>

