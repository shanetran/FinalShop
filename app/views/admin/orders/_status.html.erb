<div class="modal fade" id="edit_status_<%= order.id%>" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					<%= fa_icon("times-circle")%>
				</button>
				<h4 class="modal-title custom_align" id="Heading">Edit Status</h4>
			</div>
			<%= form_for(:orders, url: admin_order_path(order), method: :patch) do |f| %>
			<div class="modal-body">
				<div class="form-group col-lg-6">
					<label for="">Status:</label>
					<%= f.select :status, options_for_select([["Pedding","Pedding"],["Cancel","Cancel"],["Complete","Complete"]], selected: order.status),{selected: order.status}, {class: "form-control"} %>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="modal-footer ">
				<button type="submit" data-disable-with="<i class='fa fa-spinner fa-spin'></i> Processing..." class="btn btn-warning btn-lg" style="width: 100%;">
					<%= fa_icon("check-circle") %>Â Update
				</button>
			</div>
			<% end %>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
