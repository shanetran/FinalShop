<style type="text/css">
	.row table tbody tr td {
		vertical-align: middle;
	}
</style>
<div class="row">
	<div class="col-md-12">
		<h4><%= fa_icon("gift 2x")%> Manage Products</h4>
		<%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
		<div class="table-responsive">
			<table id="mytable" class="table table-bordred table-striped">
				<thead>
					<th>No</th>
					<th>Name</th>
					<th>Category</th>
					<th>Description</th>
					<th>Price</th>
					<th>Sale</th>
					<th>Stock</th>
					<th>Created at</th>
					<th>Image</th>
					<th>Edit</th>
					<th>Delete</th>
				</thead>
				<tbody>
					<% @products.each_with_index do |product, index| %>
					<tr>
						<td><%= (index + 1) %></td>
						<td><%= product.name %></td>
						<td><%= product.category.name %></td>
						<td><%= truncate(product.description, :length => 100, :separator => ' ') %></td>
						<td><%= product.price %></td>
						<td>
							<% if product.sale_price %>
								<label class="label label-success"><i class="fa fa-check-square-o"></i></label>
							<% else %>
								<label class="label label-info"><i class="fa fa-circle-o"></i></label>
							<% end %>
						</td>
						<td><%= product.stock %></td>
						<td><%= product.created_at %></td>
						<td><%= image_tag product.image.url, size: "50x50" %></td>
						<td>
						<p data-placement="top" data-toggle="tooltip" title="Edit">
							<%= link_to edit_admin_product_path(product), class: "btn btn-primary btn-xs" do %>
							<%= fa_icon("pencil")%>
							<% end %>
						</p></td>
						<td>
						<p data-placement="top" data-toggle="tooltip" title="Delete">
							<%= link_to admin_product_path(product), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-xs" do %>
							<%= fa_icon("trash-o")%>
							<% end %>
						</p></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<div class="clearfix"></div>
			<div class="col-lg-12" style="text-align: center">
				<%= paginate @products %>
			</div>
		</div>

	</div>
</div>
