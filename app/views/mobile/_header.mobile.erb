<div data-role="header" data-position="fixed">
	<div data-role="navbar">
		<ul>
			<li>
				<%= link_to root_path, class: "ui-btn-active", "data-icon" => "home" do %>
				Home
				<% end %>
			</li>
			<li>
				<% if user_signed_in? %>
					<%= link_to edit_user_path(current_user), "data-icon" => "user" do %>
						My Account
					<% end %>
				<% else %>
					<%= link_to new_user_session_path, "data-ajax" => "false" ,"data-icon" => "lock" do %>
						Sign In
					<% end %>
				<% end %>
			</li>
			<li>
				<%= link_to carts_path, "data-icon" => "shop" do %>
				Cart
				<% end %>
			</li>
		</ul>
	</div>
</div>