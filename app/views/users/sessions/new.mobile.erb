<div style="margin: 0 auto; width: 40%;">
	<h2>Login to Website</h2>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {"data-ajax" => false}) do |f| %>
	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, autofocus: true, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
	</div>

	<% if devise_mapping.rememberable? -%>
	<div class="form-group">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	</div>
	<% end -%>

	<div class="form-group">
		<%= f.button "Login", data:{disable_with: "<i class='fa fa-spinner fa-spin'></i> Login..."} ,class: "btn btn-primary", style: "width: 100%" %>
	</div>
	<% end %>

	<%= render "users/shared/links" %>

</div>
