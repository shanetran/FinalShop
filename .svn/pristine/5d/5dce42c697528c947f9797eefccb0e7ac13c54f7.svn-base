<div class="modal fade" id="user_comment_<%= comment.id%>" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					<%= fa_icon("times-circle")%>
				</button>
				<h4 class="modal-title custom_align" id="Heading">Edit Comment</h4>
			</div>
			<%= form_tag(product_comment_path(comment.product.id, comment), method: :patch) do |f| %>
			<div class="modal-body">
				<div class="form-group col-lg-10">
					<label for="">Rating:</label>
					<input id="rating-star" value="<%= comment.rate%>" type="number" class="rating user-rate" name="rate">
					<script type="text/javascript">
						$(".user-rate").on("rating.change", function(event, value, caption) {
							$(this).attr("value", value);
						});
					</script>
				</div>
				<div class="form-group col-lg-12">
					<label for="">Title</label>
					<%= text_field_tag :title, comment.title, class: 'form-control'%>
				</div>
				<div class="form-group col-lg-12">
					<label for="">Message:</label>
					<%= text_area_tag :message, comment.message, class: 'form-control' %>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="modal-footer ">
				<button type="submit" data-disable-with="<i class='fa fa-spinner fa-spin'></i> Processing..." class="btn btn-warning btn-lg" style="width: 100%;">
					<%= fa_icon("check-circle") %>Â Update
				</button>
			</div>
			<% end %>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
