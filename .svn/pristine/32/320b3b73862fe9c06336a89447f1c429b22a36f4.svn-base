<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3> Your Products Order </h3>
			<% if @orders.size > 0 %>
			<div class="row nav-cart-item">
				<% @orders.each do |order| %>
				<div class="col-md-2 nav-order-product">
					<%= image_tag(order.product.image.url(:large), size: "150x150") %>
					<h5 style="color: #337AB7"><%= link_to truncate(order.product.name, length: 17, separator: ' '), product_path(order) %></h5>
					<% if order.product.sale_price %>
					<p class="p-cart">
						Price:
						<font style="text-decoration: line-through;opacity: .7"> $<%= format_price(order.product.price) %> </font>
						<font style="color: #A72828">$<%= format_price(order.product.sale_price) %></font>
					</p>
					<% else %>
					<p class="p-cart">
						Price: <font style="color: #A72828">$<%= format_price(order.product.price) %></font>
					</p>
					<% end %>
					<p class="p-cart">
						Quantity: <span class="label label-info"><%= order.quantity %></span>
					</p>
					<p class="p-cart">
						Total Price: <span class="label label-info"><%= format_price(order.total) %></span>
					</p>
					<% if order.status == "Cancel" %>
						<span class="label label-danger"><%= order.status %></span></p>
					<% elsif order.status == "Pendding" %>	
						<span class="label label-warning"><%= order.status %></span></p>
					<% else %>
						<span class="label label-success"><%= order.status %></span></p>
					<% end %>
				</div>
				<% end %>
			</div>
			<div class="col-lg-3" style="float: right">
				<%= link_to "Shopping Now", root_path, class: "btn btn-primary" %>
			</div>
			<% else %>
			<p>
				You not have order
			</p>
			<p>
				<%= link_to "Shopping Now", root_path, class: "btn btn-primary" %>
			</p>
			<% end %>
		</div>
	</div>
</div>